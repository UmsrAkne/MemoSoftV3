<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:models="clr-namespace:MemoSoftV3.Models"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate DataType="{x:Type models:Comment}" x:Key="CommentListDataTemplate">
        <Border
            BorderBrush="SlateGray"
            BorderThickness="1"
            CornerRadius="3"
            Padding="3">

            <Grid>
                <Grid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontSize" Value="{StaticResource BasicFontSize}" />
                    </Style>
                </Grid.Resources>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <CheckBox
                    Grid.Column="0"
                    Margin="4,0,8,0"
                    VerticalAlignment="Center" />

                <TextBlock Grid.Column="1" Text="{Binding Text}" />
                <TextBlock Grid.Column="2" Text="{Binding DateTime}" />
            </Grid>

        </Border>
    </DataTemplate>
</ResourceDictionary>